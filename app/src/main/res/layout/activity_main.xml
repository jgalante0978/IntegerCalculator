<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/result_editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp" app:layout_constraintHorizontal_bias="1.0" android:textAlignment="center"
            android:textStyle="bold"/>
    <Button
            android:text="8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_8"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_5" app:layout_constraintStart_toStartOf="@+id/button_5"/>
    <Button
            android:text="5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_2" app:layout_constraintStart_toStartOf="@+id/button_2"/>
    <Button
            android:text="2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_equals"
            app:layout_constraintStart_toStartOf="@+id/button_equals"/>
    <Button
            android:text="7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_7"
            app:layout_constraintStart_toStartOf="@+id/button_4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_4"/>
    <Button
            android:text="9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_9"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_6" app:layout_constraintStart_toStartOf="@+id/button_6"/>
    <Button
            android:text="4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_1" app:layout_constraintStart_toStartOf="@+id/button_1"/>
    <Button
            android:text="6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_6"
            app:layout_constraintStart_toStartOf="@+id/button_3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_3"/>
    <Button
            android:text="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_0" app:layout_constraintStart_toStartOf="@+id/button_0"
            android:textSize="24sp"/>
    <Button
            android:text="3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_equals"
            app:layout_constraintEnd_toEndOf="@+id/button_equals"/>
    <Button
            android:text="0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_0"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:textSize="24sp"/>
    <Button
            android:text="="
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_equals"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_0" android:layout_marginStart="8dp"/>
    <Button
            android:text="/"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_division"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_multiplication"
            app:layout_constraintStart_toStartOf="@+id/button_multiplication"/>
    <Button
            android:text="x"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_multiplication"
            app:layout_constraintStart_toStartOf="@+id/button_subtraction"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_subtraction"/>
    <Button
            android:text="-"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_subtraction"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_addition"
            app:layout_constraintStart_toStartOf="@+id/button_addition"/>
    <Button
            android:text="+"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="24sp"
            android:id="@+id/button_addition"
            app:layout_constraintStart_toEndOf="@+id/button_equals"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"/>
    <Button
            android:text="CLEAR"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/button_clear" app:layout_constraintStart_toStartOf="@+id/button_7"
            app:layout_constraintEnd_toEndOf="@+id/button_9"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_8" android:textSize="24sp"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_back" app:layout_constraintStart_toStartOf="@+id/button_division"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_division"
            android:textSize="24sp" android:text="B"/>
</android.support.constraint.ConstraintLayout>